<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Manager Home</title>
    <!-- BOOTSTRAP CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
  <div class="container p-5">
      <div class="card">
          <div class="card-body">
                  <h1>Hello, Admin</h1>
          </div>
      </div>
  </div>
    <div class="container p-5">
        <div class="col">
          <div class="col-sm-5 bg-light border rounded py-3">
              <h2 class="text-center">View Products</h2>
              <form action="/viewProduct" method="POST" enctype="multipart/form-data">
                  <button type="submit" class="btn btn-primary">View Products</button>
              </form>
          </div>
            <div class="col-sm-5 bg-light border rounded py-3">
                <h2 class="text-center">Add a Product</h2>
                <form action="/addProduct" method="POST" enctype="multipart/form-data">
                    <button type="submit" class="btn btn-primary">Add a Product</button>
                </form>
            </div>
            <div class="col-sm-5 bg-light border rounded py-3">
                <h2 class="text-center">Update a Product</h2>
                <form action="/updateProduct" method="POST" enctype="multipart/form-data">
                    <button type="submit" class="btn btn-primary">Update a Product</button>
                </form>
            </div>
            <div class="col-sm-5 bg-light border rounded py-3">
                <h2 class="text-center">Delete a Product</h2>
                <form action="/deleteProduct" method="POST" enctype="multipart/form-data">
                    <button type="submit" class="btn btn-primary">Delete a Product</button>
                </form>
            </div>
          </div>
        </div>
      <div class="container p-5">
        <div class="">
            <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
</body>
</html>
